<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewQuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/numQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Number of Questions"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/diffHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:gravity="center"
            android:text="Difficulty" />

        <RadioGroup
            android:id="@+id/diffGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <RadioButton
                android:id="@+id/diffEasy"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Easy"
                android:textSize="25dp" />

            <RadioButton
                android:id="@+id/diffMedium"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:textSize="25dp" />

            <RadioButton
                android:id="@+id/diffHard"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Hard"
                android:textSize="25dp" />

        </RadioGroup>

        <Button
            android:id="@+id/startQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Quiz"
            android:visibility="visible" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>